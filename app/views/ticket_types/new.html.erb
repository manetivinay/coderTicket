<div class="container" style="margin-top: 100px">
  <div class="card">
    <div class="card-block">
      <h3 class="card-title", align="center">Ticket Type for Your Event</h3>
    </div>
    <div class="container">
      <%= render 'shared/errors', obj: @ticket_type, name: 'ticket type'  %>
      <%= simple_form_for [@event, @ticket_type] do |f| %>
          <%= f.input :name %>
          <%= f.input :price %>
          <%= f.input :max_quantity %>
          <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>